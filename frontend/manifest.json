{
  "manifest_version": 3,
  "name": "AI Anchor",
  "version": "0.1",
  "description": "Right-click selected text and use AI actions (summarize, explain, sentiment, find sources)",
  "permissions": [
    "contextMenus",
  "scripting",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["http://localhost:8000/*"]
}
